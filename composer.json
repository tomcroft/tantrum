{
    "name": "tomcroft/tantrum",
    "description": "A small ORM package for php",
    "type" : "library",
    "keywords": ["database, php, mysql, ORM"],
    "license": "GPL-3.0+",
    "authors": [
        {
            "name": "Tom Croft",
            "email": "tom@dev-ops.co.uk",
            "role": "developer"
        }
    ],
    "autoload": {
        "psr-4" : {
            "tantrum\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "tantrum\\tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:tomcroft/tantrum-mysql.git"
        }
    ],
    "require": {
        "tomcroft/tantrum-mysql": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "4.3.*",
        "mockery/mockery": "0.9.1"
    },
    "config": {
        "bin-dir": "bin/"
    }
}
